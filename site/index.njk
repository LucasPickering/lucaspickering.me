---
layout: default
title: Home
---

<div>
  <h2>Projects</h2>
  {%- for project in collections.project -%}
    <div>
      <div class="post-title-group">
        <h3>
          <a href="{{ project.url }}">{{ project.data.title }}</a>
        </h3>
        <span class="post-date">{% date project.date %}</span>
      </div>
      <img class="banner-small" src="{{ project.data.banner }}"/>
      <p>{{ project.data.summary }}</p>
    </div>
  {%- endfor -%}
</div>
